<body>

<div class="container">
    <h2>ðŸš€ AI Social Poster</h2>
    <input type="text" id="topicInput" placeholder="Enter topic (e.g. Cricket Match)">
    <button id="genBtn">Generate Post</button>
    <div id="status" style="margin-top:10px; color:#666;"></div>

    <div id="result">
        <strong>Caption:</strong> <p id="captionText"></p>
        <hr>
        <strong>Image Prompt:</strong> <p id="imagePromptText"></p>
    </div>
</div>

<script type="module">
    // Yahan hum browser ke liye sahi library use kar rahe hain
    import { GoogleGenerativeAI } from "https://esm.run/@google/generative-ai";

    // Aapki working API key jo humne screenshots mein dekhi
    const API_KEY = "AIzaSyCjK0Nxt6k9Ee_1orJ4Ftba1N0vkMx-iT0"; 
    const genAI = new GoogleGenerativeAI(API_KEY);

    document.getElementById('genBtn').addEventListener('click', async () => {
        const topic = document.getElementById('topicInput').value;
        const resultDiv = document.getElementById('result');
        const status = document.getElementById('status');

        if(!topic) return alert("Kuch likhen!");

        status.innerText = "Connecting to Gemini... ðŸ§ ";
        resultDiv.style.display = "none";

        try {
            // Model selection (v1 stable version)
            const model = genAI.getGenerativeModel({ model: "gemini-1.5-flash" });
            
            const prompt = `Topic: ${topic}. Act as a Social Media Expert. Generate a viral Instagram caption and a detailed image generation prompt. Respond in plain text.`;

            const result = await model.generateContent(prompt);
            const response = await result.response;
            const text = response.text();

            // Simple display
            document.getElementById('captionText').innerText = text;
            document.getElementById('imagePromptText').innerText = "Generating prompt based on your topic...";

            status.innerText = "";
            resultDiv.style.display = "block";
        } catch (e) {
            status.innerText = "";
            alert("Error: " + e.message + "\nTip: Make sure you are connected to the internet.");
            console.error(e);
        }
    });
</script>

</body>
